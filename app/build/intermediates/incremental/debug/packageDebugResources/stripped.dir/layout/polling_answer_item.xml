<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                         
                                                           
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/polling_answer_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <RadioButton
            android:id="@+id/chooseAnswerRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:tag="binding_1"            
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Answer text example" />

        <TextView
            android:id="@+id/pollingAnswerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="24dp"
            android:tag="binding_2"                                                      
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chooseAnswerRadioButton"
            app:layout_constraintVertical_bias="1.0"
            tools:text="0 | Answer text example"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
         